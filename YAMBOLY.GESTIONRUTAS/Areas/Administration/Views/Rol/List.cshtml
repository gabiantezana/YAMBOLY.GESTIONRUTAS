@model List<YAMBOLY.GESTIONRUTAS.VIEWMODEL.Administration.Rol.RolViewModel>

@{
    ViewBag.Title = "Lista de roles";
    ViewBag.Icon = "list";

}
@section Breadcrumbs{

}
<div class="panel">
    <div class="panel-body">
        <div class="panel-footer text-right">
            <a class="btn btn-primary animsition-link" id="btn-crear" href="@(Url.Action("AddUpdate", "Rol"))">
                <i class="fa fa-plus"></i>
                Nuevo
            </a>
        </div>
        <br />
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <td>#</td>
                        <td>Nombre</td>
                        <td>Descripcion</td>
                        <td>Opciones</td>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i+1)</td>
                            <td>@Model[i].RolName</td>
                            <td>@Model[i].RolDescription</td>
                            <td class="text-nowrap">
                                <a href="@Url.Action("AddUpdate", "Rol", new { Area = ConstantHelper.Area.ADMINISTRATION, rolId = Model[i].RolId})" class="btn btn-sm btn-icon btn-flat btn-default" data-toggle="tooltip" data-original-title="Editar">
                                    <i class="icon wb-wrench" aria-hidden="true"></i>
                                </a>
                                <a href="@Url.Action("EditPermisosPorRoles", "Rol", new { Area = ConstantHelper.Area.ADMINISTRATION, rolId = Model[i].RolId })" class="btn btn-sm btn-icon btn-flat btn-default" data-toggle="tooltip" data-original-title="Permisos">
                                    <i class="icon wb-link" aria-hidden="true"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
