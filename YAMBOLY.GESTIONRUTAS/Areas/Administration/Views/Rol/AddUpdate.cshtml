@model YAMBOLY.GESTIONRUTAS.VIEWMODEL.Administration.Rol.RolViewModel

@{
    ViewBag.Title = Model.RolId.HasValue ? "Editar rol" : "Crear rol";
    ViewBag.Icon = Model.RolId.HasValue ? "edit" : "plus";
    var isEdit = Model.RolId.HasValue ? "true" : "false";
}

<div class="panel">

    <div class="panel-heading">
        <h5 class="panel-title">Datos del rol</h5>
        <div class="panel-actions">
            <a class="panel-action icon wb-minus" data-toggle="panel-collapse" aria-hidden="true"></a>
        </div>
    </div>

    <div class="panel-body">
        @using (Html.BeginForm("AddUpdate", "Rol", FormMethod.Post))
        {
            @Html.HiddenFor(x=> Model.RolId)
            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(model => Model.RolName, new { @class = "form-label" })
                    @Html.EditorFor(x => Model.RolName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => Model.RolName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => Model.RolDescription, new { @class = "form-label" })
                    @Html.EditorFor(x => Model.RolDescription, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => Model.RolDescription)
                </div>

                @*<div class="form-group col-md-6 col-sm-12">
                        @Html.LabelFor(x => Model.RolId, new { @class = "form-label" })
                        @Html.DropDownListFor(x => Model.RolId, new SelectList(Model.NivelJList, "id", "text", 0), new { @class = "form-control form-group-margin", @data_plugin = "select2", @data_isedit = true })
                        @Html.ValidationMessageFor(x => Model.RolId)
                    </div>*@
            </div>

            <br />
            <div class="panel-footer text-right">
                <button class="btn btn-primary" id="btnGuardar"><i class="fa fa-save" aria-hidden="true"></i>&nbsp; Guardar</button>
            </div>
        }
    </div>
</div>

